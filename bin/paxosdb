#!/bin/bash -e

if [ ! -z $2 ]; then
    cat - | gzip - | curl -k --compressed                               \
        https:/$SERVER/put/db/$DB/secret/$SECRET/key/$1/version/$2      \
        -H 'Content-Type: application/json' -H 'Content-Encoding: gzip' \
        --data-binary @-
else
    curl -k --compressed https:/$SERVER/get/db/$DB/key/$1
fi
